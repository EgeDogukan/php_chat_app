{
    "name": "egedogukanseven/chat-app",
    "description": "Chat application backend using Slim Framework",
    "type": "project",

    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",        
        "php-di/php-di": "^7.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.6",
        "predis/predis": "^2.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },

    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
} 